<Window x:Class="AquaTherm.Pages.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AquaTherm.Pages"
        mc:Ignorable="d"
        Title="Авторизация" Width="300" Height="555"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="NoResize">
    <Grid >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
            <Image HorizontalAlignment="Center" Source="../Assets/Back1.png" Margin="0,20,0,0" Height="200" Width="200"></Image>
        </StackPanel>

        <StackPanel x:Name="LoginSlide" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,120,0,0" Width="250">
            
            <TextBlock Text="Логин" HorizontalAlignment="Center" FontSize="25"  Margin="0,60,0,0"/>
            <TextBox FontSize="20" FontWeight="DemiBold" x:Name="txbLogin" Height="40"></TextBox>
            
            <TextBlock Text="Пароль" HorizontalAlignment="Center" FontSize="25"/>
            <PasswordBox FontSize="20" FontWeight="DemiBold" x:Name="txbPass" Height="40"></PasswordBox>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Width="120" Height="28" FontSize="20" Margin="5" x:Name="BtnAuto" Content="Вход" Click="BtnAuto_Click"/>
                <Button Width="120" Height="28" FontSize="20" Margin="5" x:Name="BtnReg" Content="Регистрация" Click="BtnReg_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
