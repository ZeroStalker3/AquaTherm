<Window x:Class="AquaTherm.Pages.AddPages.AddMeter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AquaTherm.Pages.AddPages"
        mc:Ignorable="d"
        Background="{DynamicResource BackgroundBrush}"
        Title="Добавление показания" Width="300" Height="555"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Label Content="Показание"/>
            <TextBox x:Name="txbName" Width="244" PreviewTextInput="NumericTextBox_PreviewTextInput"/>

            <Label Content="Дата"/>
            <DatePicker x:Name="txbDate" Width="244"/>

            <Label Content="Счетчик"/>
            <ComboBox x:Name="CmbRead" Width="244"/>

            <Button Padding="35,3,0,0" x:Name="Add" Margin="25" Content="Добавить"  Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Window>
