<Window x:Class="AquaTherm.Pages.AddPages.AddClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AquaTherm.Pages.AddPages"
        mc:Ignorable="d"
        Background="{DynamicResource BackgroundBrush}"
        Title="Добавление Клиента" Width="300" Height="555"
        WindowStartupLocation="CenterScreen">
    <Grid >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Label Content="Имя" />
            <TextBox x:Name="txbName" Width="244"/>

            <Label Content="Фамилия"  />
            <TextBox x:Name="txbsecondName"  Width="244"/>

            <Label Content="Адрес"/>
            <TextBox x:Name="txbdress"  Width="244"/>

            <Label Content="Телефон"/>
            <TextBox x:Name="txbPhone"  Width="244"/>

            <Label Content="Почта"/>
            <TextBox x:Name="txbMail"  Width="244"/>
            
            <Button Padding="35,3,0,0" x:Name="Add" Margin="25" Content="Добавить" Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Window>
