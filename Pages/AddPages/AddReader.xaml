<Window x:Class="AquaTherm.Pages.AddPages.AddReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AquaTherm.Pages.AddPages"
        mc:Ignorable="d"
        Title="Добавление счётчика" Width="300" Height="555"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Label Content="Номер счетчика"/>
            <TextBox x:Name="txbNum" Width="244"/>

            <Label Content="Тип"  />
            <ComboBox x:Name="cmbType" Width="244"/>

            <Label Content="Дата Установки"  />
            <DatePicker x:Name="txbDate" Width="244"/>

            <Label Content="Состояние"/>
            <TextBox x:Name="txbSost" Width="244"/>

            <Label Content="Клиент"/>
            <ComboBox x:Name="cmbClient" Width="244"/>
            <Button Padding="35,3,0,0" x:Name="Add" Margin="25" Content="Добавить" Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Window>
